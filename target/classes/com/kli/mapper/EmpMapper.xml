<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kli.mapper.EmpMapper">
    <sql id="querySql">
        select id,username,password,name,gender,image,job,entrydate,dept_id,
               create_time,update_time from emp
    </sql>

    <sql id="insertSql">
        insert into emp (username,name,gender,
        <if test="image != null">
            image,
        </if>
        <if test="job != null">
            job,
        </if>
        <if test="entrydate != null">
            entrydate,
        </if>
        <if test="deptId != null">
            dept_id,
        </if>
        create_time,update_time) values
    </sql>

<!--    新增员工-->
    <insert id="insert">
        <include refid="insertSql"/>
        (
        #{username},
        #{name},
        #{gender},
        <if test="image != null">
            #{image},
        </if>
        <if test="job != null">
            #{job},
        </if>
        <if test="entrydate != null">
            #{entrydate},
        </if>
        <if test="deptId != null">
            #{deptId},
        </if>
        now(),
        now()
        )
    </insert>

<!--    更新员工信息-->
    <update id="update">
        update emp
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="job != null">
                job = #{job},
            </if>
            <if test="entrydate != null">
                entrydate = #{entrydate},
            </if>
            <if test="deptId != null">
                dept_id = #{deptId},
            </if>
            update_time = now()
        </set>
        where id = #{id}
    </update>

<!--    删除单个员工-->
    <delete id="delete">
        delete from emp where id = #{id}
    </delete>

<!--    批量删除员工-->
    <delete id="deleteByIds">
        delete from emp where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

<!--    查询员工-->
    <select id="query" resultType="com.kli.pojo.Emp">
        <include refid="querySql"/>
        <where>
            <if test="id != null">
                id = #{id}
            </if>
            <if test="name != null">
                and name like concat('%',#{name},'%')
            </if>
            <if test="username != null">
                and username = #{username}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="job != null">
                and job = #{job}
            </if>
            <if test="deptId != null">
                and dept_id = #{deptId}
            </if>
        </where>
        order by update_time desc
    </select>

<!--    查询员工详情-->
    <select id="queryById" resultType="com.kli.pojo.Emp">
        <include refid="querySql"/>
        where id = #{id}
    </select>

<!--    条件分页查询-->
    <select id="list" resultType="com.kli.pojo.Emp">
        <include refid="querySql"/>
        <where>
            <if test="name != null and name != ''">
                name like concat('%',#{name},'%')
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
            <if test="begin != null and end != null">
                and entrydate between #{begin} and #{end}
            </if>
            <if test="begin != null and end == null">
                and entrydate &gt;= #{begin}
            </if>
            <if test="begin == null and end != null">
                and entrydate &lt;= #{end}
            </if>
        </where>
        order by update_time desc
    </select>
</mapper>